{
  "name": "eslint-config-vladpuz-react",
  "version": "1.1.2",
  "description": "My ESLint config for React",
  "keywords": [
    "vladpuz",
    "eslint",
    "eslintconfig",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vladpuz/eslint-config-vladpuz-react.git"
  },
  "license": "MIT",
  "author": "Vladislav Puzyrev",
  "type": "module",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "check": "npm run typecheck && npm run lint && npm run format",
    "clean": "rimraf build",
    "format": "prettier --check .",
    "lint": "eslint .",
    "prepack": "npm run clean && npm run build && npm run check && npm run test",
    "prepare": "husky",
    "test": "node --test",
    "test-update-snapshots": "node --test --test-update-snapshots",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "eslint-config-vladpuz": "^2.5.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-react-x": "^2.3.5"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^22.0.3",
    "@tsconfig/node-ts": "^23.6.2",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "prettier-config-vladpuz": "^2.0.0",
    "rimraf": "^6.1.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "eslint": "^9.0.0"
  }
}
